assign [class="tixati"] $ws5
assign [class="Tixati"] $ws5
assign [class="krusader"] $ws5
assign [class="clementine"] $ws6
assign [class="Clementine"] $ws6
assign [class="clementine"] $ws6
assign [class="Clementine"] $ws6
assign [class="mullvad VPN"] $ws6
assign [class="Mullvad vpn"] $ws6

